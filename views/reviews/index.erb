<!-- Displaying all reviews -->
<h1>Local Restaurant Reviews</h1>

<!-- Iterates through the list of reviews, returns name, review text and timestamp. Also contains a link to specific restaurant. -->

<!-- Displaying the restaurant parameters -->

<h1><%= @restaurant.restaurant_name %></h1>

 <p><%= @restaurant.cuisine_type %></p>
 <p><%= @restaurant.location %></p>
 <p><%= @restaurant.opening_times %></p>
 <p><%= @restaurant.price %></p>
 <p><%= @restaurant.opening_times %></p>

 <!-- Iterates through the list of reviews, returns review text and timestamp. -->
<% @reviews.each do |review| %>
<div>
	<p><a href="/restaurants/<%= @restaurant.id %>/reviews/<%= @review.id %>"><%= review.id %></a></p>
  <p><%= review.review_text %></p>
  <p><%= review.created_at %></p>
  <p><%= review.updated_at %></p>


	<!-- Link to edit the review -->
	<a href="/restaurants/<%= @restaurant.id %>/reviews/<%= @review.id %>/edit">edit</a>

	<!-- Form to delete the review -->
	<form action="/restaurants/<%= @restaurant.id %>/reviews/<%= @review.id %>/delete" method="POST">
		<input type="hidden" value="DELETE" name="_method"> <!-- Method override post to delete -->

		<input type="submit" name="delete" value="Delete">
	</form>

</div>
<% end %>